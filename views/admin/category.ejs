<%- include("../layouts/adminheader")%>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <div>
                    <!-- <input type="text" placeholder="Search Categories" class="form-control bg-white"> -->
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/addcategory"method="post" enctype="multipart/form-data"n id="categoryForm">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category Name</label>
                                    <input type="text" name="categoryname" placeholder="Type here" class="form-control" id="category_name" required />
                                    <p id="categoryNameError" class="error-message"></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label"  >Description</label>
                                    <textarea placeholder="Type here" name="description" class="form-control" required></textarea>
                                    <p id="descriptionError" class="error-message"></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">offer</label>
                                    <input placeholder="%" name="offer" type="text" class="form-control">
                                    <p class="error-message" id="promotionalPriceError"></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Image</label>
                                    <input type="file" name="file" class="form-control" id="category_image" accept="image/*" required/>
                                    <p style="color: red;" id="imageError" class="error-message"></p>
                                </div>
                              
                                <div class="d-grid">
                                    <button class="btn btn-primary"type="submit">Create category</button>
                                </div>
                              
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <!-- <th class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div> -->
                                            </th>
                                            <th>image</th>
                                            <th>Name</th>
                                            <th>Description</th>
                    
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                   
                                        <% categories.forEach((category, index)=>{ %>
                                            
                                            <tr>
                                              
                                              <td>
                                                <img src="/uploadCategory/<%= category.image %>" width="80px" alt="img">
                                              </td>
                                              <td><%= category.categoryname %></td>
                                              <td><%= category.description %></td>
                                              <td>
                                           
                                                <a href="editcategory?userId=<%= category._id ,%>" class="btn btn-info p-1">Edit</a>
                                                <!-- <a href="delete/<%= category._id %>" class="btn btn-info p-1">Delete</a> -->
                                                    
                                                    <!-- <a href="list" class="btn btn-danger p-1">Unlist</a> -->
                                                
                                                    <% if(category.active == false) {%>
                                                    <a href="list?categoryId=<%= category._id %>" class="btn btn-success p-1">List </a>
                                                    <%}else{%>
                                                        <a href="unlist?categoryId=<%= category._id %>" class="btn btn-danger p-1">unlist </a>
                                                        <%}%>
                                                    
                                              
                                                
                                              </td>
                                            </tr>
                                             <% }); %>                                   
                                    </tbody>
                                   
                                </table>
                             <% if(typeof message !== "undefined") { %>
                                <p style="color: red;"><%= message %></p>
                             <% } %>

                            
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
  <script>
    document.getElementById("category_image").addEventListener("change" ,function(){
        const fileInput = this;
        const errorElement = document.getElementById('imageError')
        errorElement.textContent = ""
        const allowedTypes = ['image/jpeg', 'image/png', 'image/gif']
        if(fileInput.files.length >0){
            const selectFleType = fileInput.files[0].type;
            if(!allowedTypes.includes(selectFleType)){
                errorElement.textContent = "Invalid file type,Add Images"
                const value = "invalid"
            }
        }
    })
    document.getElementById("categoryForm").addEventListener("submit", function (event) {
    const errorElement = document.getElementById('imageError');
    if (errorElement.textContent !== '') {
      // An error message is displayed, prevent form submission
      event.preventDefault();
    }
  });
  </script>
        

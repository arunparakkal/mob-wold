
<%- include("../layouts/adminheader")%>
<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Product</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Description</th>
                    <th>Color</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td>
                        <% if (product.image && product.image.length > 0) { %>
                        <img src="/uploadProduct/<%= product.image[0] %>" class="img-sm img-thumbnail" alt="Item">
                        <% } %>
                    </td>
                    <td><%= product.productname %></td>
                    <td><%= product.productprice %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.description %></td>
                    <td><%= product.color %></td>
                    <td><%= product.date.toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                    <td>
                        <a href="#" class="btn btn-sm font-sm rounded btn-brand">
                            <i class="material-icons md-edit"></i> Edit
                        </a>
                        <a href="#" class="btn btn-sm font-sm btn-light rounded">
                            <i class="material-icons md-delete_forever"></i> Delete
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
            </table>
            
    </div>
</div>

<div class="pagination-area mt-30 mb-50">

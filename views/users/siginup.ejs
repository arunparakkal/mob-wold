<body>
    <main>
      
            <header class="main-header style-2 navbar">
                <div class="col-brand">
                    <a href="index.html" class="brand-wrap">
                        <img src="/admin-assets/imgs/theme/logo.png" class="logo" alt="Evar">
                    </a>
                </div>
                <div class="col-nav">
                </div>
            </header>
      
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Create an Account</h4>
                    <form method="post" action="/register"  id="myForm">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input class="form-control" name="name" placeholder="Your Name" type="text" required>
                            <label style="color: red; display: none;" id="errorName">Name must be at least 4 characters</label>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" name="email" placeholder="Your email" type="email" required>
                            <label style="color: red; display: none;" id="errorEmail">Invalid email address</label>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <div class="row gx-2">
                                <div class="col-4"> <input class="form-control" value="+91" type="text"> </div>
                                <div class="col-8"> <input class="form-control" name="mno" placeholder="Phone" type="text"> </div>
                                <label style="color: red; display: none;" id="errorMno">Invalid mobile number</label>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Create password</label>
                            <input class="form-control" name="password" placeholder="Password" type="password">
                            <label style="color: red; display: none;" id="errorPassword">Password must be strong </label>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Confirm password</label>
                            <input class="form-control" name="Cpassword" placeholder="Confirm Password" type="password">
                            <label style="color: red; display: none;" id="errorCPassword">Passwords do not match</label>
                        </div>
                        <!-- <div class="mb-3">
                            <label class="form-label">Referral code(optional)</label>
                            <input class="form-control" name="Referral_code" placeholder="referral code" type="password">
                           
                        </div> -->
                        <div class="mb-3">
                            <p class="small text-center text-muted">By signing up, you confirm that you’ve read and accepted our User Notice and Privacy Policy.</p>
                        </div> <!-- form-group  .// -->
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Register </button>
                        </div> <!-- form-group// -->
                    </form>
                    <% if (typeof message !== 'undefined') { %>
                        <p style="color: red;"><%= message %></p>
                        <% } %>
                        <p class="text-center mb-4">Already have an account? <a href="/login">Login in</a></p>
                </div>
            </div>
        </section>
